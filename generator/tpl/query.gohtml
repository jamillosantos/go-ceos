func (q @Pointer@query.FullName) By@field.MethodName@:(value @field.Type@:) @Pointer@query.FullName@: {
	q.BaseQuery.Where(ceous.Eq(@env.InputPkgCtx.Ref(env.OutputPkg, "Schema")@:.@query.Name@:.@field.FieldPath@:, value@:))
