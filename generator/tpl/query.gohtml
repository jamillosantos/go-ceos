	if bq.Schema == nil {
		bq.Schema = @env.InputPkgCtx.Ref(env.OutputPkg, "Schema")@:.@query.Name@:.BaseSchema
	}
	return @raw("&")@query.FullName@:{
		BaseQuery: bq,
	}
}

